<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/background" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:background="@drawable/gradient_top" android:layout_width="match_parent" android:layout_height="26dp">
        <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/statustext_normal" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="@string/help_title"/>
        <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@color/statustext_disabled" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:text="@string/help_return"/>
    </FrameLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <WebView android:id="@+id/help_webview" android:fadingEdge="vertical" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
